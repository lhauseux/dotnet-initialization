        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <RootNamespace>LH.Initialization</RootNamespace>
        <Version>1.0.0</Version>
        <PackageId>lhauseux.initialization</PackageId>
        <Author>Loïc Hauseux</Author>
